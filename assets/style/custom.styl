@require '_variables.styl'

// .page
//   @extend .fade-transition

.toolbar
  &__title
    font-size: 28px
    font-weight: $font-weights.medium
    margin-top: -0.25em

.expansion-panel
  &__header:after
    top: "calc(50% - %s)" % $font-size-root

button.square
  width: 5 * $font-size-root
  height: 5 * $font-size-root
  min-width: initial
  padding: 0

.spread-the-word
  a.button
    text-decoration: none

.video-container
  position:relative
  padding-bottom:60%
  height:0
  overflow:hidden


.video-container iframe, .video-container object, .video-container embed
  position:absolute
  top:0
  left:0
  width:100%
  height: 100%;

.main-container
  padding: 1px
  .content-area
    padding-right: 0px
    padding-left: 0px

// Checkboxes to the right
.input-group--selection-controls__ripple {
    right: -16px;
    left: initial;
}
.input-group--selection-controls label {
    left: 0;
}

.input-group.input-group--selection-controls .icon {
    right: 8px;
    left: initial;
}
.input-group.input-group--selection-controls label {
    max-width: initial;
}

.img-responsive{
  width: 100%;
  max-width: 300px;
  display: block;
  margin: auto;
}

.join-form{
  display: block;
  margin: auto;
  max-width: 500px;
}

.expansion-panel__body
  div.card__text
    padding-left: 23px;

.carousel
  height: 320px;

.expansion-panel__body .card__text p:last-child {
  margin-bottom: 0;
}

.expansion-panel__body .card__text ol:not(last-child),
.expansion-panel__body .card__text ul:not(last-child) {
  margin-bottom: 1em;
}

.carousel__controls
  display:none

.application--light 
  .white--text 
    .input-group
      label, .input-group__error, input, textarea
        color: #fff !important
        caret-color: #fff !important
      .input-group__details:before
        background-color: #fff !important
    .input-group--selection-controls .icon
      color: #fff !important



.input-group .input-group__details:after, .input-group .input-group__details:before
  background-color: #fff !important
  
